<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/scorecardPlayersListview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/div">
    </android.support.v7.widget.RecyclerView>

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        android:layout_above="@+id/posButtonLayout"/>

    <LinearLayout
        android:id="@+id/posButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/negButtonLayout"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/negButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
    </LinearLayout>
</RelativeLayout>